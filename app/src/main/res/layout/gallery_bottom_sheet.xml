<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="-15dp"
        app:cardCornerRadius="@dimen/activity_margin_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/activity_margin_5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/activity_margin_15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/chooseCameraLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_gallery_camera" />

                        <TextView
                            android:id="@+id/metertext1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_margin_5dp"
                            android:text="Choose Camera"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/activity_margin_90dp"
                    android:layout_marginTop="@dimen/activity_margin_14dp"
                    android:layout_marginBottom="@dimen/activity_margin_14dp"
                    android:background="@color/bordercolor" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_margin_5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/activity_margin_15dp"
                    android:layout_marginEnd="@dimen/activity_margin_15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/chooseGalleryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/meterimageoriginal2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_gallery" />

                        <TextView
                            android:id="@+id/metertext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_margin_5dp"
                            android:text="Choose From Gallery"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_25dp"
                android:layout_marginEnd="@dimen/activity_margin_25dp"
                android:layout_marginTop="@dimen/activity_margin_20dp"
                android:background="@drawable/btn_theme"
                android:gravity="center"
                android:padding="@dimen/activity_margin_15dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>